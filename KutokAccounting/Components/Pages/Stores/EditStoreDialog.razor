@using System.ComponentModel.DataAnnotations
@inject IStoresService StoresService
@inject IDialogService DialogService
@inject CancellationTokenSource Cts
@inject ILogger<StoresPage> Logger


<MudDialog>
    <TitleContent>
        Редагувати магазин
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isValid">
            <MudTextField @bind-Value="Store.Name"
                          Placeholder="Назва магазину"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal">
            </MudTextField>
            <MudTextField
                @bind-Value="Store.Address"
                Placeholder="Адресса"
                Label="Адресса"
                Variant="Variant.Outlined"
                Counter="100"
                MaxLength="100"
                Lines="1"
                Immediate="true"
                Required="false"
                Margin="Margin.Normal">
            </MudTextField>
            <MudCheckBox @bind-Value="Store.IsOpened"
                         Required="false"
                         Color="Color.Primary"
                         UncheckedColor="Color.Default">
                Відчинений
            </MudCheckBox>
            <MudDatePicker Label="Дата відкриття" @bind-Date="@NullableSetUpDate"
                           Required="true"
                           RequiredError="Це поле обов'язкове"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton OnClick="EditAsync" Disabled="!_isValid" Color="Color.Primary">Підтвердити</MudButton>
    </DialogActions>
</MudDialog>

@code {
    
    private bool _isValid = true;
    [CascadingParameter] public IMudDialogInstance MudDialog { get; set; }
    [Parameter] public StoreDto Store { get; set; } = null!;

    public DateTime? NullableSetUpDate
    {
        get => Store.SetupDate;
        set
        {
            if (value is null)
            {
                DialogService.ShowMessageBox("Обов'язкові данні не обрані!", $"Оберіть дату відкриття магазину");
            }
            else
            {
                Store.SetupDate = value.Value;
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Close();
    }

    private async Task EditAsync()
    {
        try
        {
            await StoresService.UpdateStoreAsync(Store.Id, Store, Cts.Token);
        }
        catch (Exception e)
        {
            await DialogService.ShowMessageBox("Виникла помилка", $"Текст помилки: {e}");
            Logger.LogError($"Exception occured while editing store. Messgae: {e.Message}");
            MudDialog.Close(DialogResult.Cancel());
        }
        MudDialog.Close(DialogResult.Ok(true));
    }
}