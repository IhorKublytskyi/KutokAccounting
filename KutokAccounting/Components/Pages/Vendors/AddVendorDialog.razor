@using KutokAccounting.Services.Vendors.Models
@inject IVendorService VendorService

<MudDialog>
    <TitleContent>
        Додати нового постачальника
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isSuccess">
            <MudTextField @bind-Value="_name"
                          Placeholder="Назва постачальника"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal"/>
            <MudTextField @bind-Value="_description"
                          Placeholder="Нотатки"
                          Label="Нотатки"
                          Variant="Variant.Outlined"
                          Counter="1024"
                          MaxLength="1024"
                          Lines="5"
                          Immediate="true"
                          Required="false"
                          Margin="Margin.Normal"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton OnClick="AddAsync" Disabled="!_isSuccess" Color="Color.Primary">Додати</MudButton>
    </DialogActions>
</MudDialog>

@code{

    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; }

    private string _name = null!;
    private string _description = null!;

    private bool _isSuccess;

    private async Task AddAsync()
    {
        using CancellationTokenSource tokenSource = new(TimeSpan.FromSeconds(30));

        VendorDto vendor = new()
        {
            Name = _name,
            Description = _description
        };

        await VendorService.CreateAsync(vendor, tokenSource.Token);

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Close();
    }

}