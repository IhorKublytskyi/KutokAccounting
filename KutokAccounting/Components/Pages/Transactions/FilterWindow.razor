<MudIconButton OnClick="@OpenFilter" Icon="@_icon" Size="Size.Small"/>
<MudOverlay Visible="_filterOpen" OnClick="@(() => _filterOpen = false)"/>
<MudPopover Open="_filterOpen"
            AnchorOrigin="Origin.BottomCenter"
            TransformOrigin="Origin.TopCenter"
            Style="width:600px">

    <MudStack Spacing="2" Class="pa-4">

        <MudSelect @bind-Value="_operator"
                   Label="Оператор"
                   Dense="true"
                   Required="true">
            @foreach (string op in Operators)
            {
                <MudSelectItem Value="@op">@op</MudSelectItem>
            }
        </MudSelect>

        <MudTextField @bind-Value="_rawValue"
                      Label="Сума"
                      Variant="Variant.Text"
                      Immediate="true"
                      Required="false"
                      Validation="ValidateValue"/>

        <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="2">
            <MudButton Variant="Variant.Text" OnClick="@ClearFilterAsync">
                Очистити
            </MudButton>

            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@ApplyFilterAsync">
                Фільтрувати
            </MudButton>
        </MudStack>
    </MudStack>
</MudPopover>