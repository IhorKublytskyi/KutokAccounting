@using KutokAccounting.Components.Pages.TransactionTypes.Models
@using KutokAccounting.Services.Transactions.Interfaces
@using KutokAccounting.Services.TransactionTypes.Interfaces
@inject ITransactionService TransactionService
@inject ITransactionTypeService TransactionTypeService

<MudDialog>
    <TitleContent>
        Редагувати транзакцію
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isSuccess">
            <MudTextField @bind-Value="TransactionView.Name"
                          Placeholder="Введіть назву транзакції"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal"/>
            <MudTextField @bind-Value="TransactionView.Description"
                          Placeholder="Опис"
                          Label="Опис"
                          Variant="Variant.Outlined"
                          Counter="1024"
                          MaxLength="1024"
                          Lines="5"
                          Immediate="true"
                          Required="false"
                          Margin="Margin.Normal"/>
            <MudTextField T = "string"
                          Value="@TransactionView.Money.Value.ToString()"
                          ValueChanged="OnMoneyChanged"
                          Placeholder="Сума транзакції"
                          Label="Сума"
                          Validation="ValidateValue"
                          Variant="Variant.Outlined"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
            />
            <MudAutocomplete T="TransactionTypeView"
                             AdornmentIcon="@Icons.Material.Filled.Search"
                             Variant="Variant.Outlined"
                             @bind-Value="TransactionView.TransactionType"
                             SearchFunc="SearchAsync"
                             Immediate="true"
                             Clearable="true"
                             Dense="true"
                             Placeholder="Введіть тип транзакції"
                             Label="Тип транзакції"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton OnClick="UpdateAsync" Disabled="!_isSuccess" Color="Color.Primary">Підтвердити</MudButton>
    </DialogActions>
</MudDialog>