@using KutokAccounting.Components.Pages.TransactionTypes.Models
<MudDialog>
    <TitleContent>
        Редагувати транзакцію
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isSuccess">
            <MudTextField @bind-Value="Transaction.Name"
                          Placeholder="Введіть назву транзакції"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal"/>
            <MudTextField @bind-Value="Transaction.Description"
                          Placeholder="Опис"
                          Label="Опис"
                          Variant="Variant.Outlined"
                          Counter="1024"
                          MaxLength="1024"
                          Lines="5"
                          Immediate="true"
                          Required="false"
                          Margin="Margin.Normal"/>
            <MudTextField T="string"
                          Value="@Transaction.Money.ToString("0.00")"
                          ValueChanged="OnMoneyChanged"
                          Placeholder="Сума транзакції"
                          Label="Сума"
                          Validation="ValidateValue"
                          Variant="Variant.Outlined"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"/>
            <MudAutocomplete T="TransactionTypeView"
                             AdornmentIcon="@Icons.Material.Filled.Search"
                             Variant="Variant.Outlined"
                             @bind-Value="Transaction.TransactionType"
                             SearchFunc="SearchAsync"
                             Immediate="true"
                             Clearable="true"
                             Required="true"
                             RequiredError="Це поле обов'язкове"
                             Dense="true"
                             Placeholder="Введіть тип транзакції"
                             Label="Тип транзакції"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@Cancel">Назад</MudButton>
        <MudButton OnClick="@EditAsync" Disabled="!_isSuccess" Color="Color.Primary">Підтвердити</MudButton>
    </DialogActions>
</MudDialog>