@using KutokAccounting.Components.Pages.TransactionTypes.Models
@using KutokAccounting.Services.Transactions.Interfaces
@using KutokAccounting.Services.TransactionTypes.Interfaces
@inject ITransactionService TransactionService
@inject ITransactionTypeService TransactionTypeService

<MudDialog>
    <TitleContent>
        Додати нову транзакцію
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isSuccess">
            <MudTextField @bind-Value="_name"
                          Placeholder="Назва транзакції"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal"/>
            <MudTextField @bind-Value="_description"
                          Placeholder="Опис транзакції"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="1024"
                          MaxLength="1024"
                          Lines="5"
                          Immediate="true"
                          Required="false"
                          Margin="Margin.Normal"/>
            <MudTextField @bind-Value="_value"
                          Placeholder="Сума транзакції"
                          Label="Сума"
                          Validation="ValidateValue"
                          Variant="Variant.Outlined"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
            />
            <MudAutocomplete T="TransactionTypeView"
                             AdornmentIcon="@Icons.Material.Filled.Search"
                             Variant="Variant.Outlined"
                             @bind-Value="_transactionType"
                             SearchFunc="Search"
                             Immediate="true"
                             Clearable="true"
                             Dense="true"
                             Placeholder="Введіть тип транзакції"
                             Label="Тип транзакції"
                             Required="true"
                             RequiredError="Це поле обов'язкове"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton OnClick="AddAsync" Disabled="!_isSuccess" Color="Color.Primary">Додати</MudButton>
    </DialogActions>
</MudDialog>