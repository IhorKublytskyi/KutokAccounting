@using KutokAccounting.DataProvider.Models
<MudDialog>
    <TitleContent>
        Редагувати накладну
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isSuccess">
            <MudTextField @bind-Value="Invoice.Number"
                          Placeholder="Номер накладної"
                          Label="Номер"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal"/>
            <MudTextField T="string"
                          Value="@Invoice.Money.ToString("0.00")"
                          ValueChanged="OnMoneyChanged"
                          Placeholder="Сума накладної"
                          Label="Сума"
                          Validation="ValidateValue"
                          Variant="Variant.Outlined"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"/>
            <MudAutocomplete T="Vendor"
                             @bind-Value="Invoice.Vendor"
                             AdornmentIcon="@Icons.Material.Filled.Search"
                             Variant="Variant.Outlined"
                             SearchFunc="SearchAsync"
                             Immediate="true"
                             Clearable="true"
                             Dense="true"
                             Placeholder="Введіть тип транзакції"
                             Label="Тип транзакції"
                             Required="true"
                             RequiredError="Це поле обов'язкове"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton OnClick="EditAsync" Disabled="!_isSuccess" Color="Color.Primary">Підтвердити</MudButton>
    </DialogActions>
</MudDialog>