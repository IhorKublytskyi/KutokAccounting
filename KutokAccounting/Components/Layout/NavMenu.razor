@inject IStoresService StoresService
@inject StoreStateNotifier StoreStateNotifier
@implements IDisposable

<MudNavMenu Color="Color.Default">
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Головна</MudNavLink>
    <MudNavLink Href="stores" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Store">Магазини</MudNavLink>
    <MudNavLink Href="vendors" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Face">Постачальники</MudNavLink>
    <MudNavLink Href="transactionTypes" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">
        Типи
        транзакцій
    </MudNavLink>
    <MudNavGroup Icon="@Icons.Material.Filled.DocumentScanner" Title="Накладні" Ripple="false">
        @foreach (StoreDto store in _stores)
        {
            <MudNavLink Href="@GetHrefToStoreInvoices(store.Id)">@store.Name</MudNavLink>
        }
    </MudNavGroup>
    <MudNavGroup Icon="@Icons.Material.Filled.Money" Title="Бухгалтерія" Ripple="false">
        @foreach (StoreDto store in _stores)
        {
            <MudNavLink Href="@GetHrefToStoreAccounting(store.Id)">@store.Name</MudNavLink>
        }
    </MudNavGroup>
</MudNavMenu>